# ===========================================
# SKATEBOARD CONTEST APP - ENVIRONMENT CONFIG
# ===========================================

# ===========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===========================================
# Production Supabase URL
REACT_APP_SUPABASE_URL=https://supabase.bamboy.de

# Supabase Anonymous Key (Public Key)
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anonymous_key_here

# ===========================================
# SUPER ADMIN SECURITY (CRITICAL)
# ===========================================
# Initial Setup Token - Use ONLY for first Super Admin registration
# After setup completed, this token becomes invalid
# Generate with: openssl rand -hex 32
REACT_APP_SUPER_ADMIN_SETUP_TOKEN=your_secure_64_character_hex_token_here

# ===========================================
# PAYMENT INTEGRATION
# ===========================================
# PayPal Client ID
REACT_APP_PAYPAL_CLIENT_ID=your_paypal_production_client_id

# PayPal Mode: 'sandbox' or 'production'
REACT_APP_PAYPAL_MODE=production

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session timeout in minutes (recommended: 30)
REACT_APP_SESSION_TIMEOUT_MINUTES=30

# Maximum login attempts before lockout
REACT_APP_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes after max attempts
REACT_APP_LOCKOUT_DURATION_MINUTES=15

# Password minimum length
REACT_APP_MIN_PASSWORD_LENGTH=12

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# App Display Name
REACT_APP_APP_NAME=Skateboard Contest Manager

# Version (for health checks and monitoring)
REACT_APP_APP_VERSION=1.0.0

# Environment: 'development', 'staging', 'production'
REACT_APP_ENVIRONMENT=production

# API Rate Limiting (requests per minute)
REACT_APP_API_RATE_LIMIT=100

# ===========================================
# SSL/HTTPS CONFIGURATION
# ===========================================
# Force HTTPS redirects (true/false)
REACT_APP_FORCE_HTTPS=true

# Secure cookie settings (true/false)
REACT_APP_SECURE_COOKIES=true

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Enable performance monitoring (true/false)
REACT_APP_ENABLE_MONITORING=true

# Log level: 'error', 'warn', 'info', 'debug'
REACT_APP_LOG_LEVEL=warn

# Sentry DSN for error tracking (optional)
REACT_APP_SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# COOLIFY DEPLOYMENT CONFIGURATION
# ===========================================
# Port for Coolify (usually 8080 or 3000)
PORT=8080

# Health check endpoint (for load balancer)
REACT_APP_HEALTH_CHECK_PATH=/health

# Graceful shutdown timeout (seconds)
REACT_APP_SHUTDOWN_TIMEOUT=30

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Container timezone
TZ=Europe/Berlin

# Node environment
NODE_ENV=production

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database connection pool size
REACT_APP_DB_POOL_SIZE=10

# Database connection timeout (ms)
REACT_APP_DB_TIMEOUT=5000

# ===========================================
# CDN & ASSETS CONFIGURATION
# ===========================================
# CDN URL for static assets (optional)
REACT_APP_CDN_URL=https://cdn.bamboy.de

# Asset caching duration (seconds)
REACT_APP_ASSET_CACHE_DURATION=86400

# ===========================================
# GDPR COMPLIANCE
# ===========================================
# Cookie consent required (true/false)
REACT_APP_COOKIE_CONSENT=true

# Data retention period (days)
REACT_APP_DATA_RETENTION_DAYS=730

# Privacy policy URL
REACT_APP_PRIVACY_POLICY_URL=https://skateboard.bamboy.de/privacy

# ===========================================
# BACKUP & RECOVERY
# ===========================================
# Backup frequency (hours)
REACT_APP_BACKUP_FREQUENCY=24

# Emergency recovery email
REACT_APP_EMERGENCY_EMAIL=admin@bamboy.de